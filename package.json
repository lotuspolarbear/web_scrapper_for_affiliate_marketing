		"concurrently": "^4.1.0",
		"date-and-time": "^0.6.3",
		"express": "^4.16.4",
		"mongoose": "^5.4.3",
		"node-schedule": "^1.3.1",
		"puppeteer": "^1.11.0"
	},
	"devDependencies": {
		"nodemon": "^1.18.9"
	}
}
